<li>

  <%= comment.body %> -
  <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago, by <%= comment.user.name %></small>
    <%= link_to "Delete comment", comment , method: :delete %>

  <%= form_for [comment, Comment.new] do |f| %>
      <%= f.text_area :body, placeholder: "Add a Reply" %><br/>
      <%= f.submit "Reply"  %>
      <% end %>

  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
